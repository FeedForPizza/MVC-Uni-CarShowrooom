<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">FORD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Cars" asp-action="Index">КОЛИ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="TestDrive" asp-action="Create">ЗАЯВИ ТЕСТ ДРАЙВ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-weight:bold" asp-area="" asp-controller="Orders" asp-action="Create">НАПРАВИ ПОРЪЧКА</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                          <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TestDrive" asp-action="Index">ТЕСТ ДРАЙВ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">ПОРЪЧКИ</a>
                            </li>  
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Storage" asp-action="Index">СКЛАД</a>
                            </li> 
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <a href="https://icons8.com/icons/set/car"></a>
        <div class="container">
            &copy; 2023 - CS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
