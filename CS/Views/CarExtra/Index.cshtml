@model IEnumerable<CS.Models.CarExtra>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form asp-action = "Index" methot = "get">
    <div class = "form-group">
        <lable for ="SearchString">Search by partial title:</lable>
        <input type= "text" class = "form_control" name= "SearchString" value ="@ViewData["CurrentFilter"]" />
        <input type="submit" value= "Search" class= "btn-primary btn-primary"/>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ExtraNameSortParam"]">
                @Html.DisplayNameFor(model => model.ExtraName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParam"]">
                @Html.DisplayNameFor(model => model.Price)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExtraID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExtraID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExtraID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
