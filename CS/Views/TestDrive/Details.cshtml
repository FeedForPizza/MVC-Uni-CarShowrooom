        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientMiddleName)
